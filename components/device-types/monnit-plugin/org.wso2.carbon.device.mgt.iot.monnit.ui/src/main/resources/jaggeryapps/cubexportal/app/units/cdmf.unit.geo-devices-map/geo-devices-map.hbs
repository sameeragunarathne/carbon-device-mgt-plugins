{{/zone}}

{{#zone "navbarActions"}}
    <li>
        <!--suppress HtmlUnknownTarget -->
        <a href="{{@app.context}}/device-analytics?name={{deviceName}}&id={{gatewayID}}" class="cu-btn" onclick="">
            <span class="icon fw-stack">
                <i class="fw fw-statistics fw-stack-1x"></i>
                <i class="fw fw-circle-outline fw-stack-2x"></i>
            </span>
            Analytics
        </a>
    </li>
{{/zone}}


{{#zone "content"}}
    {{#if isValid}}
    <div class="row no-gutter" style="border: 1px solid #e4e4e4;">
        <!--<div class="col-lg-12 wr-secondary-bar">-->
            <!--<label id="policy-heading" class="device-id device-select">Device Name</label>-->
            <h2>{{deviceName}}</h2>
        <!--</div>-->
    </div>
    <div id="data-holder" data-gatewayID={{gatewayID}} data-device-name="{{deviceName}}" data-lat="{{lat}}" data-lng="{{lng}}" data-token="{{token}}"></div>
    <div class="row no-gutter add-padding-5x" style="border: 1px solid #e4e4e4;">
        <div class="media">
            <div class="media-left media-middle col-xs-6 col-sm-6 col-md-2 col-lg-6">
                <div style="background: #e4e4e4; color: #333333; padding: 10px; margin-bottom: 5px"><i class="fa fa-map-marker fa-1"></i>&nbsp;Device Location
                </div>
                <div class="map-wrapper">
                    <div id="" style="height: 40vh;">
                        <div id="map"></div>
                    </div>
                </div>
            </div>
            <div class="media-body asset-desc add-padding-left-5x">
                <div style="background: #e4e4e4; color: #333333; padding: 10px; margin-bottom: 5px"><i class="fa fa-desktop fa-1"></i>&nbsp;Device Info
                </div>
                <table class="table table-responsive" id="gateway-table">
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row no-gutter" style="border: 1px solid #e4e4e4;">
        <div class="media">
            <div class="media-left media-middle col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <table class="table table-responsive borderless table-hover" id="sensor-data-table" style="background: #ffffff">
                    <thead>
                        <th class="sorting_1" style="padding-left: 30px"><strong>Sensor Type</strong></th>
                        <th class="sorting_1"><strong>Name</strong></th>
                        <th class="sorting_1" style="padding:10px 15px;"><strong>Data</strong></th>
                        <th class="sorting_1" style="padding:10px 15px;"><strong>Check Digit</strong></th>
                        <th class="sorting_1" style="padding:10px 15px;"><strong>Signal Strength</strong></th>
                        <th class="sorting_1" style="padding:10px 15px;"><strong>Battery</strong></th>
                        <th class="sorting_1" style="padding:10px 15px;"></th>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row no-gutter add-padding-5x " style="border: 1px solid #e4e4e4;">
        <div class="media" id="analytics-section" style="display:none">
            <ul class="nav nav-tabs" style="background: #ffffff">
                <li class="active"><a data-toggle="tab" href="#history">History</a>
                </li>
                <li class=""><a data-toggle="tab" href="#notifications">Notifications</a></li>
            </ul>
            <div class="tab-content" style="background: #ffffff">
                <div id="history" class="tab-pane fade in active">
                    {{unit "cdmf.unit.lib.rickshaw-graph"}}
                    <span id="arduino-details" data-devices="" data-devicename=""
                          data-deviceid=""
                          data-appcontext="{{@app.context}}"></span>
                    {{unit "cdmf.unit.analytics.date-range-picker"}}
                    <div class="">
                            <div class="row add-margin-left-3x">
                            </div>
                            <div class="clear"></div>
                            <div id="monnit-div-chart">
                                <div class="chartWrapper" id="chartWrapper">
                                    <div id="y_axis-temperature" class="custom_y_axis"></div>
                                    <div class="legend_container">
                                        <div id="smoother-temperature" title="Smoothing"></div>
                                        <div id="legend-temperature"></div>
                                    </div>
                                    <div id="chart-temperature" class="custom_rickshaw_graph"></div>
                                    <div id="x_axis-temperature" class="custom_x_axis"></div>
                                    <!--<div id="slider-temperature" class="custom_slider"></div>-->
                                </div>
                            </div>
                    </div>
                </div>
                <div id="notifications" class="tab-pane fade in">
                    <table class="table table-responsive borderless " id="notification-table" style="background: #ffffff">
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
    {{/if}}
{{/zone}}

{{#zone "bottomJs" }}
    {{js "js/leaflet/leaflet.js" }}
    {{js "js/leaflet/leaflet.markercluster.js" }}
    {{js "js/leaflet/L.Control.Locate.js" }}
    {{js "js/leaflet/L.Control.Focus.js" }}
    {{js "js/leaflet/leaflet.groupedlayercontrol.js" }}
    {{js "js/leaflet/Leaflet.fullscreen.min.js" }}
    {{js "js/leaflet/Marker.Rotate.js" }}
    {{js "js/leaflet/leaflet.draw.js" }}
    {{js "js/leaflet.awesome-markers.js"}}
    {{js "js/typeahead.bundle.min.js" }}
    {{js "js/geo_remote.js" }}
    {{js "js/app.js" }}
    {{js "js/moment.min.js"}}
    {{js "js/analytics.js" }}
{{/zone}}
